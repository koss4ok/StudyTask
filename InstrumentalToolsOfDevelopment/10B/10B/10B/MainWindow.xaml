<Window x:Class="_10B.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10B"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Button Content="Load" HorizontalAlignment="Left" Padding="5" Margin="10,10,0,0" VerticalAlignment="Top" Click="Load"/>
        <Button Content="Save" HorizontalAlignment="Left" Padding="5" Margin="55,10,0,0" VerticalAlignment="Top" Click="Save"/>
        <DataGrid Name="Data" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" />
        <Label Name="Label" Grid.Row="1"/>
    </Grid>
</Window>
